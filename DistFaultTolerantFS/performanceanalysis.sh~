#!/bin/bash

echo "################################################"
echo " Performance Analysis"

cd fusemount

echo "Creating new directories:  mkdir -p dir1/dir2"
mkdir -p dir1/dir2

echo "------------------------------"

echo "Creating and Writing into a File:   echo ""hello"" > dir1/dir2/hello.txt"
echo "hello" > dir1/dir2/hello.txt

echo "------------------------------"

echo "Retrieving data from a file:  cat dir1/dir2/hello.txt"
cat dir1/dir2/hello.txt

echo "------------------------------"

echo "Listing the files in a directory(from fusemount) : ls -l"
ls -l

echo "------------------------------"


echo " Renaming a file : mv -i dir1/dir2/hello.txt dir1/dir2/hi.txt"
mv -i dir1/dir2/hello.txt dir1/dir2/hi.txt

echo "------------------------------"

echo "Removing a file: rm -i dir1/dir2/hi.txt"
rm dir1/dir2/hi.txt

echo "------------------------------"

cd ../

